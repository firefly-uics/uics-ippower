<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--uncomment this if you want to test dubbo's monitor-->
    <dubbo:monitor protocol="registry"/>

    <dubbo:protocol name="dubbo" serialization="kryo"
                    optimizer="com.uics.ippower.SerializationOptimizerImpl"/>


    <!-- account api v2 -->
    <bean id="accountService" class="com.uics.ippower.service.AccountServiceImpl"/>

    <dubbo:service interface="com.uics.ippower.service.AccountService" ref="accountService"
                   protocol="dubbo" validation="true" timeout="2000"/>
    <!-- account api v2 -->

    <!-- message service v2 -->
    <dubbo:service interface="com.uics.ippower.service.MessageService" ref="messageService"
                   protocol="dubbo" validation="true" timeout="2000"/>

    <bean id="messageService" class="com.uics.ippower.service.MessageServiceImpl"/>
    <!-- message service v2 -->

	<!-- 区域 api -->
    <bean id="syAreaService" class="com.uics.ippower.service.SyAreaServiceImpl"/>

    <dubbo:service interface="com.uics.ippower.service.SyAreaService" ref="syAreaService"
                   protocol="dubbo" validation="true" timeout="2000" connections="100"/>
    <!-- 区域 api -->

</beans>
